	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<!-- <plugin> <artifactId>maven-compiler-plugin</artifactId> <version>2.3.2</version> 
				<configuration> <source>1.5</source> <target>1.5</target> </configuration> 
